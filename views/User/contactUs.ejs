<style>
    :root {
        --primary-color: #4a90e2;
        --secondary-color: #f39c12;
        --accent-color: #e74c3c;
        --gradient-start: #3498db;
        --gradient-end: #8e44ad;
    }
    
    body {
        font-family: 'Arial', sans-serif;
        background: linear-gradient(135deg, var(--gradient-start), var(--gradient-end));
        color: #333;
        min-height: 100vh;
    }
    
    .content-wrapper {
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }
    
    h1 {
        color: var(--primary-color);
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
    }
    
    .icon-box {
        background: linear-gradient(45deg, #f3f4f6, #ffffff);
        border-radius: 15px;
        transition: all 0.3s ease;
        border: 1px solid #e5e7eb;
    }
    
    .icon-box:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }
    
    .icon-box i {
        font-size: 2.5rem;
    }
    
    .btn-unique {
        background: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
        border: none;
        color: white;
        transition: all 0.3s ease;
    }
    
    .btn-unique:hover {
        background: linear-gradient(45deg, var(--secondary-color), var(--primary-color));
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }
    
    .social-icons a {
        color: #6c757d;
        transition: color 0.3s ease;
    }
    
    .social-icons a:hover {
        color: var(--primary-color);
    }
</style>

<%- include('../layouts/user/header.ejs') %>

<div class="container py-5">
    <div class="content-wrapper p-5">
        <h1 class="text-center mb-4">Contact Us</h1>
        <p class="text-center text-muted mb-5">
            We'd love to hear from you! Whether you have a question about our products, need assistance with an order, or just want to say hello, we're here to help.
        </p>

        <div class="row mb-5">
            <div class="col-md-6 mb-4">
                <div class="icon-box p-4 text-center">
                    <i class="fas fa-map-marker-alt mb-3" style="color: var(--secondary-color);"></i>
                    <h5>Our Location</h5>
                    <p class="text-muted">123 Model Street, Toy City, TC 12345</p>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="icon-box p-4 text-center">
                    <i class="fas fa-phone-alt mb-3" style="color: var(--accent-color);"></i>
                    <h5>Phone Number</h5>
                    <p class="text-muted">+1 (555) 123-4567</p>
                </div>
            </div>
        </div>

        <form action="/submit-contact" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" required>
                <div class="invalid-feedback">
                    Please provide your name.
                </div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
                <div class="invalid-feedback">
                    Please provide a valid email address.
                </div>
            </div>
            <div class="mb-3">
                <label for="message" class="form-label">Message</label>
                <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
                <div class="invalid-feedback">
                    Please enter your message.
                </div>
            </div>
            <button type="submit" class="btn btn-unique w-100">Send Message</button>
        </form>

        <div class="text-center mt-5">
            <h5 class="mb-3">Connect with us</h5>
            <div class="social-icons">
                <a href="#" class="me-3"><i class="fab fa-facebook fa-2x"></i></a>
                <a href="#" class="me-3"><i class="fab fa-instagram fa-2x"></i></a>
                <a href="#" class="me-3"><i class="fab fa-twitter fa-2x"></i></a>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/user/footer.ejs') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Form validation
    (function () {
        'use strict'

        var forms = document.querySelectorAll('.needs-validation')

        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>