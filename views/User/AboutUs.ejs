<style>
    :root {
        --primary-color: #4a90e2;
        --secondary-color: #f39c12;
        --accent-color: #e74c3c;
        --gradient-start: #3498db;
        --gradient-end: #8e44ad;
    }
    
    body {
        font-family: 'Arial', sans-serif;
        background: linear-gradient(135deg, var(--gradient-start), var(--gradient-end));
        color: #333;
        min-height: 100vh;
    }
    
    .content-wrapper {
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }
    
    h1 {
        color: var(--primary-color);
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
    }
    
    h2 {
        color: var(--secondary-color);
        border-bottom: 2px solid var(--secondary-color);
        padding-bottom: 10px;
        margin-bottom: 20px;
    }
    
    .icon-box {
        background: linear-gradient(45deg, #f3f4f6, #ffffff);
        border-radius: 15px;
        transition: all 0.3s ease;
        border: 1px solid #e5e7eb;
    }
    
    .icon-box:hover {
        transform: translateY(-5px) rotate(2deg);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }
    
    .icon-box i {
        background: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 2.5rem;
    }
    
    .btn-unique {
        background: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
        border: none;
        color: white;
        transition: all 0.3s ease;
    }
    
    .btn-unique:hover {
        background: linear-gradient(45deg, var(--secondary-color), var(--primary-color));
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }
    
    .vision-box {
        background: linear-gradient(45deg, #2ecc71, #27ae60);
        color: white;
        border-radius: 15px;
        position: relative;
        overflow: hidden;
    }
    
    .vision-box::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: repeating-linear-gradient(
            45deg,
            transparent,
            transparent 10px,
            rgba(255,255,255,0.1) 10px,
            rgba(255,255,255,0.1) 20px
        );
        animation: shine 20s linear infinite;
    }
    
    @keyframes shine {
        0% {
            transform: translateX(-50%) translateY(-50%) rotate(0deg);
        }
        100% {
            transform: translateX(-50%) translateY(-50%) rotate(360deg);
        }
    }
    
    .values-box {
        background-color: #f8f9fa;
        border-radius: 15px;
        transition: all 0.3s ease;
    }
    
    .values-box:hover {
        background-color: var(--accent-color);
        color: white;
    }
    
    .values-box:hover i {
        color: white !important;
    }
</style>
<%- include('../layouts/user/header.ejs') %>

<div class="container py-5">
    <div class="content-wrapper p-5">
        <!-- Welcome Section -->
        <h1 class="text-center mb-4 display-4">Welcome to Unique</h1>
        <p class="text-center lead">
            Your ultimate destination for exquisite scaled vehicle models. We bring automotive dreams to life with unparalleled craftsmanship and attention to detail.
        </p>

        <!-- Why Choose Us Section -->
        <h2 class="mt-5 mb-4">Why Choose Us?</h2>
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="icon-box p-4">
                    <i class="fas fa-gem mb-3"></i>
