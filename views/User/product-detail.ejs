<%- include('../layouts/user/header.ejs') %>

	<!-- breadcrumb -->
	<div class="container">
		<div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
			<a href="/" class="stext-109 cl8 hov-cl1 trans-04">
				Home
				<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
			</a>

			<a href="/shopping" class="stext-109 cl8 hov-cl1 trans-04">
				shop
				<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
			</a>

			<span class="stext-109 cl4">
				<%=product.productName %>
			</span>
		</div>
	</div>
		

	<!-- Product Detail -->
	<section class="sec-product-detail bg0 p-t-65 p-b-60">
		<div class="container">
			<div class="row">
				<div class="col-md-6 col-lg-7 p-b-30">
					
					<div class="p-l-25 p-r-30 p-lr-0-lg">
						<div class="wrap-slick3 flex-sb flex-w">
							<div class="wrap-slick3-dots"></div>
							<div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

							<div class="slick3 gallery-lb">
								<% for (let i=0 ;i < product.productImage.length ; i++) { %>
								<div class="item-slick3" data-thumb="/uploads/re-image/<%=product.productImage[i] %>">
									<div class="wrap-pic-w pos-relative ">
										<div class="img-magnifier-container">
										<img id="img-<%=i%>" src="/uploads/re-image/<%=product.productImage[i] %>" width="465" height="465" alt="IMG-PRODUCT">
										</div>
										<a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="/uploads/re-image/<%=product.productImage[i] %>">
											<i class="fa fa-expand"></i>
										</a>
									</div>
								</div>
								<% } %>
							</div>	
						</div>
					</div>
				</div>
					
				<div class="col-md-6 col-lg-5 p-b-30">
					<div class="p-r-50 p-t-5 p-lr-0-lg">
						<h4 class="mtext-105 cl2 js-name-detail p-b-14">
							<%=product.productName %>
						</h4>

						<span class="mtext-106 cl2">
							<p>Original Price: <del>₹<%=product.regularPrice %></del></p>
							<p>Offer Price: ₹<%=product.salePrice %></p>
						</span>
						
						
						<div class="p-t-33">
							<table class="table">
								<tr>
									<th>Size</th>
									<th>Quantity</th>
									<% if (category) { %>
									<th>Category</th>
									<% } %>

								</tr>
								<tr>
									<td><%=product.size %></td>
									<td>
										<% if(product.quantity > 10) { %>
											<p class="text text-dark"><%=product.quantity %> </p>
										<% } else if(product.quantity > 0){%>
											<p class="text text-danger">Only <%=product.quantity %> Stock !</p>
										<% } else {%>
											<p class="text text-danger">Out of stock !</p>
										<% } %>
									</td>
									<% if (category) { %>
										<td><%=category.name %></td>
									<% } %>
								</tr>
							</table>

							<div class="flex-w flex-r-m p-b-10">
								<div class="size-204 flex-w flex-m respon6-next">
									<% if (existingCart) { %>
										<a href="/cartPage"><button class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail">
												Go to cart
										</button></a>
									<% } else { %>
										<button class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail" onclick="addToCart('<%=product._id %>')">
											Add to cart
										</button>
									<% } %>
								</div>
							</div>	
						</div>

						<!--  -->
						<div class="flex-w flex-m p-l-100 p-t-40 respon7">
							<div class="flex-m bor9 p-r-10 m-r-11">
								<a id="wishlist-btn-<%=product._id%>" 
								class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 tooltip100" 
								data-tooltip="Add to Wishlist" 
								onclick="addWhishlist('<%=product._id%>')">
